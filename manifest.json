{
  "manifest_version": 3,
  "name": "Azure DevOps Board Item Opener",
  "version": "1.1",
  "description": "Opens a new tab with a URL based on a number input",
  "permissions": ["storage", "clipboardRead"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "keyboard": {
    "open_popup": {
      "default": "Ctrl+3",
      "mac": "MacCtrl+3"
    }
  },
  "icons": {
    "16": "images/logo-16x16.png",
    "32": "images/logo-32x32.png",
    "48": "images/logo-48x48.png",
    "128": "images/logo-128x128.png",
    "440": "images/logo-440x440.png"
  }
}
